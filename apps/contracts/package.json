{
  "name": "@tcg-magic/contracts",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "forge build",
    "test": "forge test",
    "test:verbose": "forge test -vvv",
    "test:gas": "forge test --gas-report",
    "clean": "forge clean",
    "deploy:local": "forge script script/DeployCardSet.s.sol --rpc-url http://localhost:8545 --broadcast",
    "deploy:sepolia": "forge script script/DeployCardSet.s.sol:DeployWithChainlinkVRF --rpc-url $SEPOLIA_RPC_URL --broadcast --verify",
    "deploy:mainnet": "forge script script/DeployCardSet.s.sol:DeployWithChainlinkVRF --rpc-url $MAINNET_RPC_URL --broadcast --verify",
    "setup:cards": "forge script script/SetupCardSet.s.sol --rpc-url $RPC_URL --broadcast",
    "lint": "echo 'Linting contracts...'",
    "dev": "forge test --watch",
    "coverage": "forge coverage",
    "docker:start": "docker-compose up -d contracts-dev",
    "docker:stop": "docker-compose down",
    "docker:shell": "docker-compose exec contracts-dev bash",
    "docker:build": "docker-compose build contracts-dev",
    "docker:rebuild": "docker-compose build --no-cache contracts-dev",
    "docker:test": "docker-compose exec contracts-dev forge test",
    "docker:test:verbose": "docker-compose exec contracts-dev forge test -vvv",
    "docker:test:gas": "docker-compose exec contracts-dev forge test --gas-report",
    "docker:build:contracts": "docker-compose exec contracts-dev forge build",
    "docker:clean": "docker-compose exec contracts-dev forge clean",
    "docker:coverage": "docker-compose exec contracts-dev forge coverage",
    "docker:dev": "docker-compose exec contracts-dev forge test --watch",
    "docker:blockchain": "docker-compose --profile blockchain up -d anvil",
    "docker:deploy:local": "docker-compose exec contracts-dev bash -c 'export PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80 && export RPC_URL=http://anvil:8545 && npm run deploy:local'",
    "docker:setup": "docker-compose exec contracts-dev npm run setup:cards",
    "docker:logs": "docker-compose logs -f contracts-dev",
    "docker:status": "docker-compose ps",
    "docker:reset": "docker-compose down -v --rmi local && docker-compose build --no-cache contracts-dev && docker-compose up -d contracts-dev"
  },
  "description": "Smart contracts for a blockchain-based trading card game with on-chain pack opening, rarity control, and NFT trading.",
  "keywords": [
    "solidity",
    "trading-cards",
    "nft",
    "blockchain",
    "foundry",
    "chainlink-vrf"
  ]
}
